  "file_constraints": {
    "target_path": "prompts/01_functions.py",
    "strict_mode": "All function definitions and execution logic must be written exclusively within this file."
  },
  "problem_requirements": {
    "input_data": "Two lists of numbers (10 items each)",
    "naming_convention": "snake_case",
    "function_logic": {
      "operations": ["addition (+)", "subtraction (-)", "multiplication (*)", "division (/)"],
      "return_format": "Must return results for all 4 operations"
    },
    "exception_handling": {
      "condition": "Division by zero",
      "action": "Return the string 'division_error'"
    }
  },
  "test_data": {
    "list_a": [10, 25, 30, 45, 50, 12, 70, 88, 90, 100],
    "list_b": [2, 5, 0, 9, 10, 4, 7, 11, 3, 20]
  },
  "expected_deliverable": "Python source code content for 'prompts/01_functions.py'"
}
✅ 문제 코드 골격 학생이 채워 넣도록 비워둔 버전입니다. def calculate_all(num1, num2): # 여기에 사칙연산 구현 # return (덧셈, 뺄셈, 곱셈, 나눗셈) pass

테스트 리스트 (10개)
test_a = [10, 25, 40, 12, 7, 9, 16, 100, 3, 81] test_b = [5, 5, 8, 3, 0, 3, 2, 4, 9, 9]

테스트 실행
for i in range(10): a = test_a[i] b = test_b[i] result = calculate_all(a, b) print(f"{a}, {b} => {result}")

